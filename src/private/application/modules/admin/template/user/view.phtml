<?php /* @var $this Ajde_Template_Parser_Phtml_Helper */ 

$clientFilter = new Ajde_Filter_Where('nodetype', Ajde_Filter::FILTER_EQUALS, NodeModel::NODETYPE_CLIENT);

$options = new Ajde_Crud_Options();
$options
	->selectFields()
		->selectField('username')
			->setEmphasis(true)
			->up()
		->selectField('password')
			->setDisableRichText(true)
			->setLength(255)
			->setIsRequired(false)
			->up()
		->selectField('email')
			->setFunction('emailLink')
			->up()
		->selectField('clients')
			->setLabel('Client access')
			->setType('multiple')
			->setEditRoute('admin/node:view.crud?view[filter][nodetype]=23')
			->setListRoute('admin/node:view.crud?view[filter][nodetype]=23')
			->setAdvancedFilter(array($clientFilter))
			->setSimpleSelector(true)
			->setModelName('node')
			->setCrossReferenceTable('user_node')
			->up()
		->up()
	->selectList()
		->selectButtons()
			->setNew(true)
			->setEdit(true)
			->addItemButton('login', 'login')
			->up()
		->setMain('username')
		->setShow(array('username', 'usergroup', 'email', 'fullname'))
		->up()
	->selectEdit()
		->setShow()
		->selectLayout()
			->addRow()
				->addColumn()
                    ->setSpan(12)
					->addBlock()
						->setShow(array('username', 'password', 'usergroup', 'email', 'fullname', 'clients'))

	->finished();

$crud = $this->ACCrudList('user', $options);

if (Ajde::app()->getRequest()->has('new')) {
	$crud->setOption('fields.password.isRequired', true);
}

?>

<div class="row-fluid">
	<div class="span12">
		
		<div class="page-header">
			<h1>
				<?php echo _e(Ajde::app()->getDocument()->getTitle()); ?>
			</h1>
		</div>		
		
		<?php echo $crud->output(); ?>
		
	</div><!--/span-->
</div><!--/row-->