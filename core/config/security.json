{
    "autoEscapeString": true,
    "autoCleanHtml": true,
    "csrf": {
        "requirePostToken": true,
        "postWhitelistRoutes": [
            "shop/transaction:callback",
            "shop/transaction:complete",
            "shop/transaction:refused"
        ]
    },
    "cookie": {
        "domain": false,
        "secure": false,
        "httponly": true
    },
    "log": {
        "writer": [
            "php",
            "db",
            "file"
        ],
        "level": "4:Error"
    }
}
