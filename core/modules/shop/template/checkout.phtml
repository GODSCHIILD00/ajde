                <p>
                    <a href='user/logon?returnto=shop/checkout' class='btn btn-info btn-sm'><?php echo __('Login now', 'shop'); ?></a>
                    <?php echo __('Or if you don\'t have an account yet', 'shop'); ?> <a href='user/register?returnto=shop/checkout'><?php echo __('register for an account', 'shop'); ?></a>.
                </p>
            <?php } ?>

        <?php } ?>

        <?php if ($this->cart->hasItems()) { ?>
            <?php if ($transaction->hasLoaded() && $transaction->isSameAsCart($cart)) { ?>
                <div class='toolbar text-right'>
                    <a class='btn btn-success btn-lg' href='shop/transaction:update'>
                        <?php echo __('Proceed with checkout', 'shop'); ?>
                        <span class="glyphicon glyphicon-chevron-right"></span>
